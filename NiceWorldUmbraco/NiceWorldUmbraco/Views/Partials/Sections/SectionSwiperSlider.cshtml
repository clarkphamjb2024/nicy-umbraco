@inherits Umbraco.Web.Mvc.UmbracoViewPage

@{
	Layout = null;
	// Get basic design settings from the homepage
	var home = (Home)Model.Root();
	var landscapeImages = home.LandscapeImages.ToList();
}

<section class="section">
	<div class="swiper-desktop">
		<div class="owl-one owl-carousel">
			@for (int i = 0; i < landscapeImages.Count(); i++)
			{
				<div id="swiper-background-@i" class="background-image">
					<style>
						#swiper-background-@i {
							background-image: url(@landscapeImages[i].Url());
						}
					</style>
					<div class="container">
						<div class="home-section">
							<div class="row align-items-center">
								<div class="col-lg-12">
									<div class="home-intro text-center">
										<h1><span id="typed-id-@i"></span></h1>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
	<div class="swiper-mobile">
		<div class="owl-one owl-carousel">
			<div id="mb1" class="background-image"></div>
			<div id="mb2" class="background-image"></div>
		</div>
	</div>
</section>